{{#partial "styles"}}
    <link rel='stylesheet' href='/css/styles.css'>
{{/partial}}
{{#partial "content"}}
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="main-col">
                <div class="content">
                    <div id="slider">
                        <figure>
                            <img src="../../images/elephant.jpg">
                            <img src="../../images/monk.jpg">
                            <img src="../../images/stare.jpg">
                        </figure>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <h1>Add a Non-Endangered Animal</h1>

            <p>Add animal here:</p>

            <form action="/animals" method="post">
                <div class="form-group md-form">
                    <label for="name"></label>
                    <input id="name" name="name" type="text" class="form-control">
                </div>
                <button type="submit" class="btn btn-dark-green">Add Animal</button>
            </form>
        </div>
    </div>
</div>



{{/partial}}
{{> layout.hbs}}